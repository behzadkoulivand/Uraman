<form class="form-signin" action="/users/register" method="POST">
    <h1 class="h3 mb-3 font-weight-normal">ثبت نام کاربر</h1>
    <%- include("./includes/validationErrors.ejs") %>
    <label for="inputFullname" class="sr-only">نام و نام خانوادگی</label>
    <input
        id="inputFullname"
        type="fullname"
        name="fullname"
        class="form-control mb-2"
        placeholder="نام و نام خانوادگی"
        autofocus
    />
    <label for="inputPhone" class="sr-only">شماره تلفن</label>
    <input
        type="tel"
        name="phone"
        id="inputPhone"
        class="form-control mb-2"
        placeholder="شماره تلفن"
    />
    <!-- <label for="isAdmin" class="sr-only">کاربر عادی هستید یا میزبان؟</label> -->
    <div class="form-group">
        <label for="isAdmin">مسافر هستید یا میزبان؟</label>
        <select name="isAdmin" class="form-control" id="isAdmin">
            <option value= "normalUser">مسافر(مهمان)</option>
            <option value= "admin">میزبان(صاحب اقامت‌گاه)</option>
        </select>
    </div>
    <label for="inputPassword" class="sr-only">کلمه عبور</label>
    <input
        type="password"
        name="password"
        id="inputPassword"
        class="form-control mb-2"
        placeholder="کلمه عبور"
    />
    <label for="inputConfirmPassword" class="sr-only">تکرار کلمه عبور</label>
    <input
        type="password"
        name="confirmPassword"
        id="inputConfirmPassword"
        class="form-control"
        placeholder="تکرار کلمه عبور"
    />
    <div class="checkbox mb-3">
        <label>
            <a href="/users/login">اکانت کاربری دارم</a>
        </label>
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">
        ثبت نام
    </button>
</form>
